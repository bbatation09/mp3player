<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFolder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_music_folder" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="40dp"
        android:text="재생목록명"
        app:layout_constraintBottom_toBottomOf="@+id/ivFolder"
        app:layout_constraintStart_toEndOf="@+id/ivFolder"
        app:layout_constraintTop_toTopOf="@+id/ivFolder" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/ivFolder"
        app:layout_constraintStart_toEndOf="@+id/ivFolder"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="노래"
        app:layout_constraintBottom_toBottomOf="@+id/tvCount"
        app:layout_constraintStart_toEndOf="@+id/tvCount"
        app:layout_constraintTop_toTopOf="@+id/tvCount" />

    <ImageView
        android:id="@+id/ivOption"
        android:layout_width="32dp"
        android:layout_height="45dp"
        android:layout_marginStart="250dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivFolder"
        app:layout_constraintStart_toEndOf="@+id/ivFolder"
        app:layout_constraintTop_toTopOf="@+id/ivFolder"
        app:srcCompat="@drawable/icon_btnoption" />
</androidx.constraintlayout.widget.ConstraintLayout>